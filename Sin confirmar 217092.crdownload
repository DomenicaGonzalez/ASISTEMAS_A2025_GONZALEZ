import hashlib

def calcular_hash(contenido):
    return hashlib.sha256(contenido.encode()).hexdigest()

# Contenido original (simulado)
contenido = "Este es el contenido original del archivo."

# Paso 1: Generar el hash original
hash_guardado = calcular_hash(contenido)
print("ğŸ” Hash guardado:", hash_guardado)

# SimulaciÃ³n: volvemos a calcular el hash como si releyÃ©ramos el archivo
contenido_actual = "Este es el contenido original del archivo."  # puedes cambiarlo para simular alteraciones
hash_actual = calcular_hash(contenido_actual)

# Paso 2: Mostrar el hash actual
print("ğŸ” Hash actual :", hash_actual)

# Paso 3: Comparar hashes
if hash_guardado == hash_actual:
    print("âœ”ï¸ El archivo NO ha sido modificado.")
else:
    print("âŒ El archivo HA sido modificado.")
