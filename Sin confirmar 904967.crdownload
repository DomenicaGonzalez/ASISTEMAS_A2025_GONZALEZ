def analizar_permisos():
    print("\n🔍 Analizando permisos en la carpeta simulada:\n")

    # Simulación de archivos con permisos
    archivos = [
        {"nombre": "sistema.py", "lectura": True, "escritura": True, "ejecucion": False},
        {"nombre": "reporte.txt", "lectura": True, "escritura": False, "ejecucion": False},
        {"nombre": "auditoria.exe", "lectura": True, "escritura": True, "ejecucion": True}
    ]

    for archivo in archivos:
        print(f"\n📄 {archivo['nombre']}")
        print(f" Lectura:   {'✔️' if archivo['lectura'] else '❌'}")
        print(f" Escritura: {'✔️' if archivo['escritura'] else '❌'}")
        print(f" Ejecución: {'✔️' if archivo['ejecucion'] else '❌'}")

# Llamamos a la función
analizar_permisos()
