import re

# Lista de contraseñas a verificar
contrasenas = ["123456", "Password1", "admin", "Segura#2025", "qwerty", "Hola123!"]

# Función para verificar si la contraseña cumple requisitos de seguridad
def verificar_contrasena(contrasena):
    longitud = len(contrasena) >= 8
    mayuscula = re.search(r"[A-Z]", contrasena)
    minuscula = re.search(r"[a-z]", contrasena)
    numero = re.search(r"[0-9]", contrasena)
    especial = re.search(r"[!@#$%^&*(),.?\":{}|<>]", contrasena)

    if longitud and mayuscula and minuscula and numero and especial:
        return "✔️ Segura"
    else:
        return "❌ Débil"

# Analizar cada contraseña
for pwd in contrasenas:
    resultado = verificar_contrasena(pwd)
    print(f"🔍 Contraseña: {pwd} → {resultado}")
